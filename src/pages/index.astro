---
import Badge from "@/components/Badge.astro";
import Layout from "@/layouts/Layout.astro";

import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import MailIcon from "@/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import Experience from "@/components/Experience.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Briefcase from "@/icons/Briefcase.astro";
import Projects from "@/components/Projects.astro";
import CodeIcon from "@/icons/Code.astro";
---

<Layout
	title="Porfolio Jonnathan - Desarrollador y Programador Web con +3 años de experiencia."
	description="Contrata a Jonnathan para crear tù applicaciòn web o mòvil. Desarrolador Web, especializado en crear applicaciones ùnicas."
>
	<main class="px-4">
		<SectionContainer id="top" class="py-44 pb-20">
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex gap-x-4 pb-6 lg:pb-10"
			>
				<div>Hey soy Jonnathan</div>
				<a
					href="https://www.linkedin.com/"
					target="_blank"
					rel="noopener"
					class="flex items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-xl">
				<span>+3 años de experiencia.</span>
				<span class="text-yellow-200/90"
					>Desarrolador web Frontend y Backend.</span
				>
				<span class="text-red-200/90">De Cuenca, Ecuador.</span>
				<span class="opacity-75">
					Especializado en crear aplicaciones ùnicas
				</span>
			</h2>

			<nav class="flex items-center gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/">
					<LinkedIn class="size-4 md:size-6" />
					Linkedin
				</SocialPill>

				<SocialPill href="https://www.github.com/">
					<GitHub class="size-4 md:size-6" />
					GitHub
				</SocialPill>

				<SocialPill href="https://www.github.com/">
					<MailIcon class="size-4 md:size-6" />
					Email
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibold mb-6 flex items-center gap-x-2">
				<Briefcase class="size-7" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibold mb-6 flex items-center gap-x-2">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
